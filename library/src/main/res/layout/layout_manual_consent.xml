<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manual_consent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="50dp"
    android:paddingVertical="@dimen/dp_8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="text"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:text="Do you agree to Start?"
        android:textColor="@color/white"
        android:textColorHint="@color/text_grey"
        android:textSize="@dimen/textsize_13" />

    <TextView
        android:id="@+id/btn_yes_consent"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_radius_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:singleLine="true"
        android:text="YES"
        android:onClick="onClickYes"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:textColor="@color/lower_third_green"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_no_consent"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_radius_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:singleLine="true"
        android:text="NO"
        android:onClick="onClickEnd"
        android:textStyle="bold"
        android:textColor="@color/lower_third_red"
        android:textSize="14sp" />
</LinearLayout>